# Database MySQL - Configurazione PRODUZIONE
# Rinomina questo file in .env.local e configura con i dati del tuo server

# Configurazione Database MySQL del Server
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=inserisci_password_mysql
DB_NAME=verifiche_condominiali

# Configurazione Produzione
NEXT_PUBLIC_API_URL=https://tuodominio.com/api
NODE_ENV=production

# Configurazione Email (opzionale - per le notifiche)
SMTP_HOST=smtp.tuodominio.com
SMTP_PORT=587
SMTP_USER=noreply@tuodominio.com
SMTP_PASS=password_email

# Security (genera chiavi sicure per produzione)
NEXTAUTH_SECRET=genera-una-chiave-sicura-di-32-caratteri
NEXTAUTH_URL=https://tuodominio.com